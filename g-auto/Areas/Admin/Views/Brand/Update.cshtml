
@{
    ViewBag.Title = "Update";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

@model g_auto.Models.Brand

@using (Html.BeginForm("Update", "Brand", FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-validate-custom" }))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">

        <h1>Update the Brand</h1>
        <input type="hidden" name="Id" value="@Model.Id" />


        <div class="row">
            <div class="col-lg-8">
                <div class="round-section" style="padding:30px !important">
                    <div class="col-lg-12">

                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-group mt-3">
                            @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="">
                                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control input w-full border mt-2 mb-2 custom-val-input intro-y box input--lg", @required = true } })

                                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger", @style = "color:red" })
                            </div>
                        </div>



                        <div class="form-group mt-3">
                            <div class="mt-2">
                                <label>Country</label>
                                <div class="mt-2">
                                    <select class="select2" id="country" name="OriginCountry" style="width:100%">
                                        <option value="@Model.OriginCountry">@Model.OriginCountry</option>

                                    </select>

                                </div>
                            </div>
                        </div>

                        @{
                            Html.RenderPartial("~/Areas/Admin/Views/Partial/_ButtonSection.cshtml", new g_auto.ViewModels.ButtonSection
                            {
                                url = "Brand",
                                btntype = "Update"
                            });
                        }
                    </div>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="flex flex-wrap round-section">
                    <div class="col-md-12">
                        @{
                            Html.RenderPartial("~/Areas/Admin/Views/Partial/_ImageSectionMultiple.cshtml", new g_auto.ViewModels.ImageFile
                            {
                                ImageName = "LogoFile",
                                ImageText = "Logo Image",
                                ImageDbLink = Model.Logo,
                                ImageHeight = "200px"

                            });
                        }
                    </div>

                </div>
            </div>
        </div>
    </div>
}
