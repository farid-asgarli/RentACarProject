@model  g_auto.ViewModels.LoginPage

@{
    Layout = null;
}

<!DOCTYPE html>

<html lang="en" style="background-image: linear-gradient(45deg, #1C3FAA 2%, #002025 100%)!important; overflow-y:hidden">
<!-- BEGIN: Head -->
<head>
    <meta charset="utf-8">
    <link href="~/Areas/Admin/Assets/images/logo.svg" rel="shortcut icon">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Login - CyberDream</title>
    <!-- BEGIN: CSS Assets-->
    <link rel="stylesheet" href="~/Areas/Admin/Assets/css/app.css">
    <link href="~/Areas/Admin/Assets/css/style.css" rel="stylesheet" />
    <!-- END: CSS Assets-->
</head>
<!-- END: Head -->
<body class="login">
    <div class="preloader">
        <div id="particles-background" class="vertical-centered-box"></div>
        <div class="vertical-centered-box">
            <div class="preloader-content">
                <div class="loader-circle"></div>
                <div class="loader-line-mask">
                    <div class="loader-line"></div>
                </div>
                <img alt="Midone Tailwind HTML Admin Template" style="width:3.5rem" src="~/Areas/Admin/Assets/images/logo.svg">
            </div>
        </div>
    </div>
    <div class="container sm:px-10">
        <div class="block xl:grid grid-cols-2 gap-4">
            <!-- BEGIN: Login Info -->
            <div class="hidden xl:flex flex-col min-h-screen">
                <a href="" class="-intro-x flex items-center pt-5">
                    <img alt="Midone Tailwind HTML Admin Template" class="w-6" src="~/Areas/Admin/Assets/images/logo.svg">
                    <span class="text-white text-lg ml-3"> Cyber<span class="font-medium">Dream</span> </span>
                </a>
                <div class="my-auto">
                    <img alt="Midone Tailwind HTML Admin Template" class="-intro-x w-1/2 -mt-16" src="~/Areas/Admin/Assets/images/using-software.png">
                    <div class="-intro-x text-white font-medium text-4xl leading-tight mt-10">
                        Manage All your <span class="word-carousel-holder"><span class="word-carousel">Stuff</span></span> <br />
                        in One Place
                    </div>
                    @*<div class="-intro-x mt-5 text-lg text-white">Manage all your e-commerce accounts in one place</div>*@
                </div>
            </div>
            <!-- END: Login Info -->
            <!-- BEGIN: Login Form -->
            <div class="h-screen xl:h-auto flex py-5 xl:py-0 my-10 xl:my-0">
                <div class="my-auto mx-auto xl:ml-20 bg-white xl:bg-transparent px-5 sm:px-8 py-8 xl:p-0 rounded-md shadow-md xl:shadow-none w-full sm:w-3/4 lg:w-2/4 xl:w-auto">
                    <h2 class="intro-x font-bold text-2xl xl:text-3xl text-center xl:text-left login-text">
                        Sign In
                    </h2>
                    <div class="intro-x mt-2 text-gray-500 xl:hidden text-center">A few more clicks to sign in to your account. Manage all your e-commerce accounts in one place</div>
                    <form action="@Url.Action("Login", "Home")" method="post" id="login_form">
                        <div class="intro-x mt-8">
                            <div class="form-group">
                                @Html.TextBoxFor(t => t.Email, null, new { @class = "intro-x login__input input input--lg border border-gray-300 block  mb-3", @style = "color:black", @placeholder = "Email", @type = "email", @required = "true" })
                                @Html.ValidationMessageFor(t => t.Email, null, new { @class = "text-danger text-white" })
                            </div>

                            <div class="form-group">
                                @Html.TextBoxFor(t => t.Password, null, new { @class = "intro-x login__input input input--lg border border-gray-300 block mt-4  mb-3", @style = "color:black", @placeholder = "Password", @type = "password", @required = "true" })
                                @Html.ValidationMessageFor(t => t.Password, null, new { @class = "text-danger text-white" })
                            </div>
                        </div>
                        <div class="intro-x flex text-gray-700 text-xs sm:text-sm mt-4">

                        </div>
                        <div class="intro-x mt-5 xl:mt-8 text-center xl:text-left">
                            <button type="submit" class="button button--lg w-full xl:w-32 text-white bg-theme-1 xl:mr-5 action-pr-btn">Login</button>
                            <button id="reg_btn" type="button" class="button button--lg w-full xl:w-32 text-gray-700 border border-gray-300 mt-3 xl:mt-0 xl:ml-20 action-pr-btn bg-white">Sign up</button>
                        </div>
                    </form>
                </div>
            </div>
            <!-- END: Login Form -->
        </div>
    </div>
    <style>
        .error {
            color: white !important;
        }

        @@media(max-width:1279px) {
            .error {
                color: black !important;
            }
            .field-validation-error {
                color: black !important;
            }
        }
    </style>
    <!-- BEGIN: JS Assets-->
    <script src="~/Areas/Admin/Assets/js/app.js"></script>
    <script src="~/Scripts/jquery-3.5.1.js" type="text/javascript" crossorigin="anonymous"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Areas/Admin/Assets/js/loginscript.js"></script>
    <!-- END: JS Assets-->
</body>
</html>