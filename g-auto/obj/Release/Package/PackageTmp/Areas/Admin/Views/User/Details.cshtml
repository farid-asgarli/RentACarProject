                                @if (item.isCancelled == false && item.isFinished == false)
                                {
                                    <a class="flex items-center text-theme-6 cancel_res_index" href="javascript:;" data-id="@item.Id"> <i data-feather="x" class="w-4 h-4 mr-1"></i> Cancel </a>
                                }
