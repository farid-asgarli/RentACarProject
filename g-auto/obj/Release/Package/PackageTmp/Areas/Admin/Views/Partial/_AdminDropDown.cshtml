@{
    Layout = null;
    g_auto.DAL.DBContext db = new g_auto.DAL.DBContext();
    int AdminId = (int)Session["AdminId"];

    g_auto.Models.Admin xdb = db.Admin.Find(AdminId);

}

<!-- BEGIN: Account Menu -->
<div class="intro-x dropdown w-8 h-8 relative admin_dropdown">
    <div class="dropdown-toggle w-8 h-8 rounded-full overflow-hidden shadow-lg image-fit zoom-in">
        @if (xdb != null)
        {
            <img alt="Midone Tailwind HTML Admin Template" class="prof_image_holder" src="~/Uploads/@xdb.ProfilePicture">
        }
    </div>
    <div class="dropdown-box mt-10 absolute w-56 top-0 right-0 z-20 ">
        <div class="dropdown-box__content box bg-theme-38 dark:bg-dark-6 text-white">
            <div class="p-4 border-b border-theme-40 dark:border-dark-3">
                <div class="font-medium admin_name">@if (xdb!= null) { @xdb.FullName}</div>
                <div class="text-xs text-theme-41 dark:text-gray-600">@if (xdb != null)
                {@xdb.Speciality}</div>
            </div>
            <div class="p-2">
                <a href="@Url.Action("Index", "Admin", new { id = AdminId})" class="flex items-center block p-2 transition duration-300 ease-in-out hover:bg-theme-1 dark:hover:bg-dark-3 rounded-md action-pr-btn"> <i data-feather="user" class="w-4 h-4 mr-2"></i> Profile </a>
                <a href="@Url.Action("Index", "AdminsAll", new { id = AdminId})" class="flex items-center block p-2 transition duration-300 ease-in-out hover:bg-theme-1 dark:hover:bg-dark-3 rounded-md action-pr-btn"> <i data-feather="edit" class="w-4 h-4 mr-2"></i> Manage Admins </a>
                <a href="javascript:;" class="flex items-center block p-2 transition duration-300 ease-in-out hover:bg-theme-1 dark:hover:bg-dark-3 rounded-md" id="changepass_modal_btn"> <i data-feather="lock" class="w-4 h-4 mr-2"></i> Change Password </a>
                <a href="@Url.Action("Help","Admin")" class="flex items-center block p-2 transition duration-300 ease-in-out hover:bg-theme-1 dark:hover:bg-dark-3 rounded-md"> <i data-feather="help-circle" class="w-4 h-4 mr-2"></i> Help </a>
            </div>
            <div class="p-2 border-t border-theme-40 dark:border-dark-3">
                <a href="@Url.Action("Logout", "Home")" class="flex items-center block p-2 transition duration-300 ease-in-out hover:bg-theme-1 dark:hover:bg-dark-3 rounded-md action-pr-btn"> <i data-feather="toggle-right" class="w-4 h-4 mr-2"></i> Logout </a>
            </div>
        </div>
    </div>
</div>
<!-- END: Account Menu -->
