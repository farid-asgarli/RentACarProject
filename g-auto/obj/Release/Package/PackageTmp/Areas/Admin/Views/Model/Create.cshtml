
@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

@model g_auto.Models.Model

@using (Html.BeginForm("Create", "Model", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h1>Create a Model</h1>


        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <input type="hidden" name="AdminId" value="@ViewBag.Admin" />
        <div class="round-section">

            <div class="row">
                <div class="col-lg-6">


                    <div class="form-group mt-3">

                        <label class="control-label col-md-2">Model Name</label>
                        <div class=" mb-2">
                            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control input w-full border mt-2 custom-val-input", @required = true } })


                        </div>
                        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger", @style = "color:red" })
                    </div>
                    <div class="form-group mt-3">
                        @Html.LabelFor(model => model.Engine, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class=" mt-2 mb-2 relative">
                            <div class="absolute rounded-l w-10 h-full flex items-center justify-center bg-gray-100 dark:bg-dark-1 dark:border-dark-4 border text-gray-600">L</div>
                            @Html.EditorFor(model => model.Engine, new { htmlAttributes = new { @class = "form-control input pl-12 w-full border col-span-4 custom-val-input", @required = true, @type = "number", @step = "0.01", @value = "0.00", @placeholder = "0.00" } })


                        </div>
                        @Html.ValidationMessageFor(model => model.Engine, "", new { @class = "text-danger", @style = "color:red" })
                    </div>

                    <div class="form-group mt-3">
                        <label class="control-label col-md-2">Horse Power</label>
                        <div class=" mt-2 mb-2 relative">
                            <div class="absolute rounded-l w-10 h-full flex items-center justify-center bg-gray-100 dark:bg-dark-1 dark:border-dark-4 border text-gray-600">kW</div>
                            @Html.EditorFor(model => model.HorsePower, new { htmlAttributes = new { @class = "form-control input pl-12 w-full border col-span-4 custom-val-input", @required = true, @type = "number", @step = "0.01", @value = "0.00", @placeholder = "0.00" } })


                        </div>
                        @Html.ValidationMessageFor(model => model.HorsePower, "", new { @class = "text-danger", @style = "color:red" })
                    </div>

                    <div class="form-group mt-3">
                        @Html.LabelFor(model => model.Mass, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class=" mt-2 mb-2  relative">
                            <div class="absolute rounded-l w-10 h-full flex items-center justify-center bg-gray-100 dark:bg-dark-1 dark:border-dark-4 border text-gray-600">lbs</div>
                            @Html.EditorFor(model => model.Mass, new { htmlAttributes = new { @class = "form-control input pl-12 w-full border col-span-4 custom-val-input", @required = true, @type = "number", @step = "0.01", @value = "0.00", @placeholder = "0.00" } })


                        </div>
                        @Html.ValidationMessageFor(model => model.Mass, "", new { @class = "text-danger ", @style = "color:red" })
                    </div>

                    <div class="form-group mt-3">
                        <label class="control-label col-md-2">Doors</label>
                        <div class=" mt-2 mb-2 relative">
                            <div class="absolute rounded-l w-10 h-full flex items-center justify-center bg-gray-100 dark:bg-dark-1 dark:border-dark-4 border text-gray-600">#</div>
                            @Html.EditorFor(model => model.Doors, new { htmlAttributes = new { @class = "form-control input pl-12 w-full border col-span-4  custom-val-input", @required = true, @min = "1", @max = "100", @type = "number", @value = "4", @placeholder = "4" } })


                        </div>
                        @Html.ValidationMessageFor(model => model.Doors, "", new { @class = "text-danger", @style = "color:red" })
                    </div>


                    <div class="form-group mt-3">
                        <label class="control-label col-md-2">Seats</label>
                        <div class=" mt-2 mb-2 relative">
                            <div class="absolute rounded-l w-10 h-full flex items-center justify-center bg-gray-100 dark:bg-dark-1 dark:border-dark-4 border text-gray-600">#</div>
                            @Html.EditorFor(model => model.Seats, new { htmlAttributes = new { @class = "form-control input pl-12 w-full border col-span-4  custom-val-input", @required = true, @min = "1", @max = "100", @type = "number", @value = "4", @placeholder = "4" } })


                        </div>
                        @Html.ValidationMessageFor(model => model.Doors, "", new { @class = "text-danger", @style = "color:red" })
                    </div>


                    <div class="form-group mt-3">
                        @Html.LabelFor(model => model.Mileage, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class=" mt-2 mb-2 relative">
                            <div class="absolute rounded-l w-10 h-full flex items-center justify-center bg-gray-100 dark:bg-dark-1 dark:border-dark-4 border text-gray-600">lb-ft</div>
                            @Html.EditorFor(model => model.Mileage, new { htmlAttributes = new { @class = "form-control input pl-12 w-full border col-span-4  custom-val-input", @required = true, @type = "number", @value = "00", @placeholder = "00" } })


                        </div>
                        @Html.ValidationMessageFor(model => model.Mileage, "", new { @class = "text-danger", @style = "color:red" })
                    </div>

                    <div class="form-group mt-3">
                        <label class="control-label col-md-2">Price (Daily)</label>
                        <div class=" mt-2 mb-2 relative">
                            <div class="absolute rounded-l w-10 h-full flex items-center justify-center bg-gray-100 dark:bg-dark-1 dark:border-dark-4 border text-gray-600">$</div>
                            @Html.EditorFor(model => model.PriceDaily, new { htmlAttributes = new { @class = "input pl-12 w-full border col-span-4  custom-val-input", @required = true, @step = "0.01", @type = "number", @value = "0.00", @placeholder = "0.00" } })


                        </div>
                        @Html.ValidationMessageFor(model => model.PriceDaily, "", new { @class = "text-danger", @style = "color:red" })
                    </div>
                </div>
                <div class="col-lg-6">


                    <div class="form-group mt-3">
                        <div class="mt-2">
                            <label>Brand</label>
                            <div class="mt-2">
                                <select class="select2" name="BrandId" style="width:100%">
                                    @if (ViewBag.Brand != null)
                                    {
                                        foreach (var item in ViewBag.Brand)
                                        {
                                            <option value="@item.Id">@item.Name </option>
                                        }
                                    }
                                </select>
                            </div>
                        </div>
                    </div>

                    <div class="form-group mt-3">
                        <div class="mt-2">
                            <label>Color</label>
                            <div class="mt-2">
                                <select class="select2" name="Color" style="width:100%">
                                    <option value="Red"> Red</option>
                                    <option value="Green"> Green</option>
                                    <option value="Blue"> Blue</option>
                                </select>


                            </div>
                        </div>
                    </div>
                    <div class="form-group mt-3">
                        <div class="mt-2">
                            <label>Fuel Type</label>
                            <div class="mt-2">
                                <select class="select2" name="FuelType" style="width:100%">
                                    <option value="Diesel">Diesel</option>
                                    <option value="Ethanol">Ethanol</option>
                                    <option value="Biodiesel">Biodiesel</option>
                                    <option value="Propane">Propane</option>
                                    <option value="Natural Gas"> Natural Gas</option>
                                    <option value="Electric">Electric</option>
                                </select>


                            </div>
                        </div>
                    </div>

                    <div class="form-group mt-3">
                        <div class="mt-2">
                            <label>Drivetrain</label>
                            <div class="mt-2">
                                <select class="select2" name="DriveTrain" style="width:100%">
                                    <option value="Front-Wheel Drive"> Front-Wheel Drive</option>
                                    <option value="Rear-Wheel Drive"> Rear-Wheel Drive</option>
                                    <option value="Both"> Both</option>
                                </select>


                            </div>
                        </div>
                    </div>

                    <div class="form-group mt-3">
                        <div class="mt-2">
                            <label>Engine Layout</label>
                            <div class="mt-2">
                                <select class="select2" name="EngineLayout" style="width:100%">
                                    <option value="Front Engine"> Front Engine</option>
                                    <option value="Mid Engine"> Mid Engine</option>
                                    <option value="Rear Engine"> Rear Engine</option>
                                </select>
                            </div>
                        </div>
                    </div>



                    <div class="form-group mt-3">
                        <div class="mt-2">
                            <label>Transmission</label>
                            <div class="mt-2">
                                <select class="select2" name="Transmission" style="width:100%">
                                    <option value="Automated-Manual">Automated-Manual</option>
                                    <option value="Automatic">Automatic</option>
                                    <option value="Continuously Variable Transmission">Continuously Variable Transmission</option>
                                    <option value="Dual-Clutch Transmission">Dual-Clutch Transmission</option>
                                    <option value="Direct Shift Gearbox ">Direct Shift Gearbox</option>
                                    <option value="Tiptronic">Tiptronic</option>
                                </select>
                            </div>
                        </div>
                    </div>

                    <div class="form-group mt-3">
                        <div class="mt-2">
                            <label>Condition</label>
                            <div class="mt-2">
                                <select class="select2" name="Condition" style="width:100%">
                                    <option value="New">New</option>
                                    <option value="Deprecated">Deprecated</option>
                                </select>
                            </div>
                        </div>
                    </div>
                  


                    <div class="form-group mt-3">
                        <label class="control-label col-md-2 ">Year</label>
                        <div class="relative mx-auto mt-2 mb-2">
                            <div class="absolute rounded-l w-10 h-full flex items-center justify-center bg-gray-100 border text-gray-600 dark:bg-dark-1 dark:border-dark-4">
                                <i data-feather="calendar" class="w-4 h-4"></i>
                            </div>
                            <input type="number" min="1901" max="@DateTime.Now.ToString("yyyy")" name="Year" onkeyup="if (parseInt(this.value) >@DateTime.Now.ToString("yyyy")) { this.value =@DateTime.Now.ToString("yyyy")return false; }" style="width:100%" class="input pl-12 border  custom-val-input" required>
                        </div>
                        @Html.ValidationMessageFor(model => model.Year, "", new { @class = "text-danger", @style = "color:red" })
                    </div>

                </div>

                <div class="col-lg-6">

                    <div class="form-group mt-3 mb-3">
                        <label class="control-label col-md-2">Description </label>
                        <div class=" mt-5">
                            @Html.TextAreaFor(model => model.Description, new { @class = "summernote", @name = "editor", @data_feature="all" })
                            @Html.ValidationMessageFor(model => model.Description, "", new { @class = "sm:ml-auto mt-1 sm:mt-0 text-xs text-red-600" })
                        </div>
                    </div>
                </div>

                <div class="col-lg-6">
                    <div class="mt-3 round-section flex flex-wrap justify-between">
                        <div class="mt-3 ml-2 mr-2">
                            <label>ABS</label>
                            <div class="mt-2">
                                @Html.CheckBoxFor(model => model.hasABS, new { @class = "input input--switch border" })
                            </div>
                        </div>
                        <div class="mt-3 ml-2 mr-2">
                            <label>Alloy Wheels</label>
                            <div class="mt-2">
                                @Html.CheckBoxFor(model => model.hasAlloyWheels, new { @class = "input input--switch border" })
                            </div>
                        </div>
                        <div class="mt-3 ml-2 mr-2">
                            <label>Cruise Control</label>
                            <div class="mt-2">
                                @Html.CheckBoxFor(model => model.hasCC, new { @class = "input input--switch border" })
                            </div>
                        </div>
                        <div class="mt-3 ml-2 mr-2">
                            <label>Conditioner</label>
                            <div class="mt-2">
                                @Html.CheckBoxFor(model => model.hasConditioner, new { @class = "input input--switch border" })
                            </div>
                        </div>
                        <div class="mt-3 ml-2 mr-2">
                            <label>ESP</label>
                            <div class="mt-2">
                                @Html.CheckBoxFor(model => model.hasESP, new { @class = "input input--switch border" })
                            </div>
                        </div>
                        <div class="mt-3 ml-2 mr-2">
                            <label>Leather Interior</label>
                            <div class="mt-2">
                                @Html.CheckBoxFor(model => model.hasLeatherInterior, new { @class = "input input--switch border" })
                            </div>
                        </div>
                        <div class="mt-3 ml-2 mr-2">
                            <label>Parking Sensors</label>
                            <div class="mt-2">
                                @Html.CheckBoxFor(model => model.hasPSensors, new { @class = "input input--switch border" })
                            </div>
                        </div>

                        <div class="mt-3 ml-2 mr-2">
                            <label>Xenon Lights</label>
                            <div class="mt-2">
                                @Html.CheckBoxFor(model => model.hasXenon, new { @class = "input input--switch border" })
                            </div>
                        </div>
                    </div>
                  
                </div>
                <div class="col-lg-12">
                    <div class="mt-3 round-section">
                        <label>Upload Image</label>
                        <div class="border-2 border-dashed dark:border-dark-5 rounded-md mt-3 pt-4">
                            <div class="flex flex-wrap px-4 imgparent">
                            </div>
                            <div class="px-4 pb-4 flex items-center cursor-pointer relative">
                                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" class="feather feather-image w-4 h-4 mr-2">
                                    <rect x="3" y="3" width="18" height="18" rx="2" ry="2"></rect>
                                    <circle cx="8.5" cy="8.5" r="1.5"></circle>
                                    <polyline points="21 15 16 10 5 21"></polyline>
                                </svg>
                                <span class="text-theme-1 dark:text-theme-10 mr-1">Upload a file</span> or drag and drop
                                @*<input id="imagemultiple" name="ImageFile" multiple type="file" class="w-full h-full top-0 left-0 absolute opacity-0">*@
                                @Html.TextBoxFor(model => model.ImageFile, new { @class = "form-control w-full h-full top-0 left-0 absolute opacity-0", @id = "imagemultiple", @type = "file", @multiple = "multiple" })
                            </div>
                        </div>

                        @{
                            Html.RenderPartial("~/Areas/Admin/Views/Partial/_ButtonSection.cshtml", new g_auto.ViewModels.ButtonSection
                            {
                                url = "Model",
                                btntype = "Create"
                            });
                        }
                    </div>
                </div>
            </div>

        </div>
    </div>
}


