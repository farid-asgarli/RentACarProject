
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

@model g_auto.Models.AdminSettings

<h1 style="margin:50px 0">Settings</h1>

<form enctype="multipart/form-data" class="text-left intro-y" method="post" id="submitASettingsForm">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 mb-3">
                <div class="form-group mt-3">
                    <label class="control-label col-md-2 font-medium">Name to display on main website (Blogs, Messages, Review etc.)</label>
                    <div class="">
                        @Html.EditorFor(model => model.DisplayName, new { htmlAttributes = new { @class = "form-control input w-full border mt-2 custom-val-input intro-y box input--lg adminsettings-input", @required = true, @style = "border-radius: 18px;font-size: 21px;padding-left:35px;padding-right:35px" } })

                        @Html.ValidationMessageFor(model => model.DisplayName, "", new { @class = "sm:ml-auto mt-1 sm:mt-0 text-xs text-red-600 " })
                    </div>

                </div>
            </div>
            <div class="col-lg-12 mb-3">
                <div class="toggles shadow-md box border pt-2 pb-2">
                    <div class="h-12 flex items-center justify-between z-50 ">

                        <div class="ml-10 text-gray-700 dark:text-gray-300 flex items-center mr-3" style="font-size:20px">Always set status to active when adding items (CRUD) </div>
                        @Html.CheckBoxFor(x => x.alwaysActive, new { @class = "input input--switch border  mr-10 adminsettings-toggle", @type = "checkbox" })
                    </div>
                </div>
            </div>
            <div class="col-lg-12 mb-3">
                <div class="toggles shadow-md box border pt-2 pb-2">
                    <div class="h-12 flex items-center justify-between z-50 ">

                        <div class="ml-10 text-gray-700 dark:text-gray-300 flex items-center mr-3" style="font-size:20px">Enable side menu grouping </div>
                        @Html.CheckBoxFor(x => x.menuGrouping, new { @class = "input input--switch border  mr-10 adminsettings-toggle ref-req", @type = "checkbox" })
                    </div>
                </div>
            </div>
            <div class="col-lg-12 mb-3">

                <div class="toggles shadow-md box border pt-2 pb-2">
                    <div class="h-12 flex items-center justify-between z-50 dark-mode-switcher ">

                        <div class="ml-10 text-gray-700 dark:text-gray-300 flex items-center" style="font-size:20px">Dark Mode (Experimental)</div>
                        <input class="input input--switch border mr-10" type="checkbox" value="1">
                    </div>
                </div>

            </div>

        </div>
    </div>
</form>
