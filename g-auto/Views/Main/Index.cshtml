                                                            </a>
                                                            <h4>$@item.PriceDaily.ToString("0") <span>/ Day</span></h4>
                                                            <ul>
                                                                <li><i class="fa fa-car"></i>Model:@item.Year</li>
                                                                <li><i class="fas fa-gas-pump"></i>@item.FuelType</li>

                                                            </ul>
                                                            <ul>
                                                                <li><i class="fa fa-cogs"></i>@item.Engine.ToString("0.0")</li>
                                                                <li><i class="fa fa-dashboard"></i>@item.Transmission</li>


                                                            </ul>
                                                            <div class="offer-action">
                                                                <a href="@Url.Action("Reservation", "ModelG", new { id=item.Id})" class="offer-btn-1">Rent Car</a>
                                                                <a href="@Url.Action("Details", "ModelG", new { id=item.Id})" class="offer-btn-2">Details</a>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>

                                            }
                                        }
                                    </div>

                                </div>
                                <!-- All Tab End -->
                                <!-- Nissan Tab Start -->
                                @foreach (g_auto.Models.Brand item in Model.Brands)
                                {
                                    if (item.isActive != false)
                                    {
                                        <div class="tab-pane fade" id="@item.Name" role="tabpanel" aria-labelledby="@item.Name-tab">
                                            <div class="row">
                                                @foreach (g_auto.Models.Model item2 in item.Models.OrderByDescending(c => c.PostDate))
                                                {
                                                    if (item2.isActive != false)
                                                    {
                                                        <div class="col-lg-4">
                                                            <div class="single-offers">
                                                                <div class="offer-image" style="height:150px">
                                                                    <a href="@Url.Action("Details", "ModelG", new { id=item.Id})">
                                                                        <img src="~/Uploads/@item2.ModelImages.FirstOrDefault().Name" alt="offer 1">
                                                                    </a>
                                                                </div>
                                                                <div class="offer-text">
                                                                    <a href="#">
                                                                        <h3>@item2.Name</h3>
                                                                    </a>
                                                                    <h4>$@item2.PriceDaily.ToString("0") <span>/ Day</span></h4>
                                                                    <ul>
                                                                        <li><i class="fa fa-car"></i>Model:@item2.Year</li>
                                                                        <li><i class="fas fa-gas-pump"></i>@item2.FuelType</li>

                                                                    </ul>
                                                                    <ul>
                                                                        <li><i class="fa fa-dashboard"></i>@item2.Transmission</li>

                                                                        <li><i class="fa fa-cogs"></i>@item2.Engine.ToString("0.0")</li>

                                                                    </ul>
                                                                    <div class="offer-action">
                                                                        <a href="@Url.Action("Reservation", "ModelG", new { id=item2.Id})" class="offer-btn-1">Rent Car</a>
                                                                        <a href="@Url.Action("Details", "ModelG", new { id=item2.Id})" class="offer-btn-2">Details</a>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    }

                                                }
                                            </div>
                                        </div>

                                    }
                                }
                                <!-- Nissan Tab End -->


                            </div>
                        </div>
                    </div>
                </div>

            </div>

        </section>

    }
}




