    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model g_auto.VM.Home

@************************************************************************@
@********************************SLIDER-AREA-START***********************@
@************************************************************************@


<section class="slider-area" data-aos="fade-right">
    <div class="gauto-slide owl-carousel">
        @if (Model.Sliders != null && Model.Layout != null)
        {
            if (Model.Layout.sliderToggle != false)
            {
                var i = 0;

                foreach (g_auto.Models.Sliders item in Model.Sliders.Take(Model.Layout.sliderCount.Value))
                {

                    if (item.isActive != false)
                    {
                        i++;

                        <div class="main-slide slide-item-@i" style="background-image:url(/Uploads/@item.Image)">
                            <div class="gauto-main-caption">
                                <div class="gauto-caption-cell">
                                    <div class="container">
                                        <div class="row">
                                            <div class="col-md-12">
                                                <div class="slider-text">
                                                    <p>@item.Title</p>
                                                    <h2>@item.Subtitle</h2>
                                                    <a href="@item.Link" class="gauto-btn">Reserve Now!</a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }

                }
            }
        }
    </div>
</section>


@************************************************************************@
@*********************************SLIDER-AREA-END************************@
@************************************************************************@



@************************************************************************@
@*******************************SEARCH-AREA-START************************@
@************************************************************************@

<section class="search-area">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="find-box" data-aos="fade-up">
                    <div class="row">
                        <div class="col-md-4">
                            <div class="find-text">
                                <h3>Search Your Best Cars here.</h3>

                            </div>
                        </div>
                        <div class="col-md-8">
                            <div class="find-form">
                                <form method="get" action="@Url.Action("Grid", "ModelG")">
                                    <div class="row">
                                        <div class="col-md-4">
                                            <p>
                                                <select id="EngineLayout" name="EngineLayout">
                                                    <option value="Front Engine"> Front Engine</option>
                                                    <option value="Mid Engine"> Mid Engine</option>
                                                    <option selected value="Rear Engine"> Rear Engine</option>
                                                </select>
                                            </p>
                                        </div>
                                        <div class="col-md-4">
                                            <p>
                                                <select id="DriveTrain" name="DriveTrain">
                                                    <option value="Front-Wheel Drive"> Front-Wheel Drive</option>
                                                    <option value="Rear-Wheel Drive"> Rear-Wheel Drive</option>
                                                    <option selected value="Both"> Both</option>
                                                </select>
                                            </p>
                                        </div>
                                        <div class="col-md-4">
                                            <p>
                                                <select id="FuelType" name="FuelType">
                                                    <option selected value="Diesel">Diesel</option>
                                                    <option value="Ethanol">Ethanol</option>
                                                    <option value="Biodiesel">Biodiesel</option>
                                                    <option value="Propane">Propane</option>
                                                    <option value="Natural Gas"> Natural Gas</option>
                                                    <option value="Electric">Electric</option>
                                                </select>
                                            </p>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-4">
                                            <p>
                                                <select id="Transmission" name="Transmission">
                                                    <option value="Automated-Manual">Automated-Manual</option>
                                                    <option selected value="Automatic">Automatic</option>
                                                    <option value="Continuously Variable Transmission">Continuously Variable Transmission</option>
                                                    <option value="Dual-Clutch Transmission">Dual-Clutch Transmission</option>
                                                    <option value="Direct Shift Gearbox ">Direct Shift Gearbox</option>
                                                    <option value="Tiptronic">Tiptronic</option>
                                                </select>
                                            </p>
                                        </div>
                                        <div class="col-md-4">
                                            <p>
                                                <select id="Condition" name="Condition">
                                                    <option selected value="New">New</option>
                                                    <option value="Deprecated">Deprecated</option>
                                                </select>
                                            </p>
                                        </div>
                                        <div class="col-md-4">
                                            <p>
                                                <button type="submit" class="gauto-theme-btn">Find Car</button>
                                            </p>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@************************************************************************@
@*******************************SEARCH-AREA-END**************************@
@************************************************************************@

