        <section class="blog-area">
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <div class="text-center mb-3 mt-3">
                            <div class="ui-title-logo">OUR BLOG</div>
                            <h2 class="ui-title">See The Latest News</h2>
                        </div>
                    </div>
                </div>
                <div class="row">
                    @foreach (g_auto.Models.Blog item in Model.Blogs.Take(Model.Layout.blogCount.Value))
                    {
                        if (item.isActive != false)
                        {
                            var CommentCount = 0;

                            if (item.Comments != null && item.Comments.FirstOrDefault() != null)
                            {
                                foreach (g_auto.Models.Comment c in item.Comments)
                                {
                                    CommentCount += c.Replies.Count();
                                }

                            }

                            <div class="col-lg-4">
                                <div class="single-blog-container">
                                    <div class="single-blog">
                                        <a href="@Url.Action("Details", "BlogG", new { id=item.Id})">
