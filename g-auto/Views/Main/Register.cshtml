
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{
    Html.RenderPartial("~/Views/Partial/_BreadCromb.cshtml", new g_auto.VM.BreadCromb
    {
        Page = "Register",
        HREF = Url.Action("Register", "Main")
    });
}

@model g_auto.Models.User

<section class="gauto-login-area section_70">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="login-box">
                    <div class="login-page-heading">
                        <i class="fas fa-user-plus mr-3"></i>
                        <h3>Register</h3>
                    </div>
                    @using (Html.BeginForm("Register", "Main", FormMethod.Post, new { enctype = "multipart/form-data", @id = "user_reg_form" }))
                    {
                        @Html.AntiForgeryToken()

                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="account-form-group">
                            @Html.TextBoxFor(u => u.FullName, new { @required = true, @type = "text", @placeholder = "Name", @class = "form-control mb-3" })
                            <i class="fas fa-user-alt"></i>
                            @Html.ValidationMessageFor(u => u.FullName, "", new { @class = "text-danger text-left d-block  mb-3", @style = "color:#e2b71c !important"  })
                        </div>
                        <div class="account-form-group">
                            @Html.TextBoxFor(u => u.Email, new { @required = true, @type = "email", @placeholder = "Email", @class = "form-control mt-3 mb-3" })
                            <i class="fas fa-envelope"></i>
                            @Html.ValidationMessageFor(u => u.Email, "", new { @class = "text-danger text-left d-block  mb-3", @style = "color:#e2b71c !important" })
                        </div>
                        <div class="account-form-group">
                            @Html.TextBoxFor(u => u.Phone, new { @required = true, @type = "text", @placeholder = "Phone Number", @class = "form-control mt-3 mb-3" })
                            <i class="fas fa-phone-alt"></i>
                            @Html.ValidationMessageFor(u => u.Phone, "", new { @class = "text-danger text-left d-block  mb-3", @style = "color:#e2b71c !important" })
                        </div>
                        <div class="account-form-group">
                            @Html.TextBoxFor(u => u.Password, new { @required = true, @type = "password", @placeholder = "Password", @class = "form-control mb-3", @id = "confirm_pass" })
                            <i class="fa fa-lock"></i>
                            @Html.ValidationMessageFor(u => u.Password, "", new { @class = "text-danger text-left d-block  mb-3", @style = "color:#e2b71c !important" })
                        </div>

                        <div class="account-form-group">
                            <input type="password" required class="form-control mb-3" placeholder="Confirm Password" name="confirm_password" value="" />
                            <i class="fa fa-lock"></i>
                        </div>
                        @*<div class="account-form-group">
                <input type="password" placeholder="Confirm Password" name="password">
                <i class="fa fa-lock"></i>
            </div>*@
                        @*<div class="remember-row">
                <p class="checkbox remember signup">
                    <input class="checkbox-spin" type="checkbox" id="Freelance">
                    <label for="Freelance"><span></span>accept terms & condition</label>
                </p>
            </div>*@
                        <p>
                            <button type="submit" class="gauto-theme-btn">Register now</button>
                        </p>
                    }
                    <div class="login-sign-up">
                        <a href="@Url.Action("Login","Main")">Already have an account?</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>