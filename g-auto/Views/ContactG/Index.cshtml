
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    Html.RenderPartial("~/Views/Partial/_BreadCromb.cshtml", new g_auto.VM.BreadCromb
    {
        Page = "Contact",
        HREF = Url.Action("Index", "ContactG")
    });
}

@model g_auto.Models.Layout
<section class="gauto-contact-area section_70">
    <div class="container">
        <div class="row">
            <div class="col-lg-7">
                <div class="contact-left">
                    <h3>Get in touch</h3>
                    <div class="woocommerce-notices-wrapper mt-5" id="notifyProfileUpdate">
                        <ul class="woocommerce-error" role="alert">
                            <li> Your message has been succesfully submitted. Our agents will contact you soon. </li>
                        </ul>
                    </div>
                    <form method="post" id="contactSupport" onsubmit="return false">
                        <div class="form-group">
                            <label class="form-label">Full Name*</label>
                            <input class="form-control" name="Name" minlength="6" maxlength="150" type="text" required>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="form-label">Email Address*</label>
                                    <input class="form-control" name="Email" type="email" required>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="form-label">Phone *</label>
                                    <input type="text" class="form-control" maxlength="14" minlength="14" name="Phone" required  />
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="form-label">Subject*</label>
                            <input class="form-control" name="Subject" minlength="6" maxlength="150" type="text" required>
                        </div>
                        <div class="form-group">
                            <label class="form-label">Message</label>
                            <textarea class="form-control" name="Content" maxlength="500" rows="5"></textarea>
                        </div>

                        <div class="row">
                            <div class="col-md-12">
                                <div class="single-contact-field">
                                    <button type="submit" id="contactSupportbtn" class="gauto-theme-btn"><i class="fa fa-paper-plane"></i> Send Message</button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            <div class="col-lg-5">
                <div class="contact-right">
                    <h3>Contact information</h3>
                    <div class="contact-details">
                        <p><i class="fa fa-map-marker"></i> @Model.Address </p>
                        <div class="single-contact-btn">
                            <h4>Email Us</h4>
                            <a href="email:@Model.Email">@Model.Email</a>
                        </div>
                        <div class="single-contact-btn">
                            <h4>Call Us</h4>
                            <a href="tel:@Model.Phone">+994 @Model.Phone</a>
                        </div>
                        <div class="social-links-contact">
                            <h4>Follow Us:</h4>
                            <ul>
                                <li><a href="#"><i class="fa fa-facebook"></i></a></li>
                                <li><a href="#"><i class="fa fa-twitter"></i></a></li>
                                <li><a href="#"><i class="fa fa-linkedin"></i></a></li>
                                <li><a href="#"><i class="fa fa-pinterest"></i></a></li>
                                <li><a href="#"><i class="fa fa-skype"></i></a></li>
                                <li><a href="#"><i class="fa fa-vimeo"></i></a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>